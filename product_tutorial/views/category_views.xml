<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_tutorial.view_categories_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new category.
            </p>
        </field>
    </record>

    <record id="product_tutorial.category_list" model="ir.ui.view">
        <field name="name">Category List</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="min_price"/>
            </list>
        </field>
    </record>

    <record id="product_tutorial.category_form" model="ir.ui.view">
        <field name="name">Category Form</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="min_price"/>
                        <field name="company_id"/>
                        <field name="active"/>
                        <button string="Ensure Positive Margins" type="object" name="action_ensure_positive_margins"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
